<%- include('partials/header', { title: 'Error' }) %>

<main class="error-page-main">
    <div class="container">
        <h1 class="error-code"><%= error.status || 500 %></h1>
        
        <p class="error-message">
            <%= error.message || 'Something went wrong on the server.' %>
        </p>

        <% if (error.status === 404) { %>
            <p>The page you are looking for does not exist. Check the URL or go back home.</p>
        <% } %>
        
        <a href="/" class="btn btn-primary">Go to Home Page</a>
    </div>
</main>

<%- include('partials/footer') %>

<style>
    /* बेसिक एरर पेज स्टाइलिंग */
    .error-page-main {
        text-align: center;
        padding: 50px 0;
    }
    .error-code {
        font-size: 6em;
        color: #dc3545; /* Red color for error */
        margin-bottom: 10px;
    }
    .error-message {
        font-size: 1.5em;
        color: #333;
        margin-bottom: 30px;
    }
    .btn-primary {
        /* compose.ejs वाली स्टाइल यहाँ भी काम करेगी */
        background-color: #007bff;
        color: white;
        padding: 10px 15px;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        text-decoration: none;
    }
</style>