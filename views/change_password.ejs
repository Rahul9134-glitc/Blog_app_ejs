<%- include('partials/header', { title: title }) %>

<main class="change-password-page-main">
  <div class="container">
    <div class="password-card">
      <h1 class="form-title"><i class="fa-solid fa-key"></i> Change Your Password</h1>

      <form action="/users/<%= user._id %>/password" method="POST" class="password-form">
        <div class="form-group">
          <label for="currentPassword">Current Password</label>
          <input type="password" id="currentPassword" name="currentPassword" class="form-control" required>
        </div>

        <div class="form-group">
          <label for="newPassword">New Password</label>
          <input type="password" id="newPassword" name="newPassword" class="form-control" required minlength="6">
        </div>

        <div class="form-group">
          <label for="confirmPassword">Confirm New Password</label>
          <input type="password" id="confirmPassword" name="confirmPassword" class="form-control" required minlength="6">
        </div>

        <div class="form-actions">
          <button type="submit" class="btn btn-primary save-btn">
            <i class="fa-solid fa-lock"></i> Update Password
          </button>
          <a href="/users/<%= user._id %>" class="btn btn-secondary cancel-btn">
            <i class="fa-solid fa-arrow-left"></i> Back to Profile
          </a>
        </div>
      </form>
    </div>
  </div>
</main>

<%- include('partials/footer') %>

<style>
/* ============================================= */
/* CHANGE PASSWORD PAGE STYLES */
/* ============================================= */
:root {
  --bg-color: #f8f9fa;
  --text-color: #212529;
  --card-bg: #ffffff;
  --border-color: #e0e0e0;
  --input-bg: #ffffff;
}

body.dark-mode {
  --bg-color: #121212;
  --text-color: #f1f1f1;
  --card-bg: #1e1e1e;
  --border-color: #333;
  --input-bg: #2a2a2a;
}

.change-password-page-main {
  padding: 60px 0;
  background-color: var(--bg-color);
  transition: background-color 0.4s ease, color 0.4s ease;
}

.container {
  max-width: 550px;
  margin: 0 auto;
  padding: 0 20px;
}

/* ============================================= */
/* PASSWORD CARD */
/* ============================================= */
.password-card {
  background-color: var(--card-bg);
  border-radius: 16px;
  box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
  padding: 35px;
  transition: all 0.4s ease;
  transform: translateY(0);
}
.password-card:hover {
  transform: translateY(-3px);
  box-shadow: 0 15px 35px rgba(0, 0, 0, 0.15);
}

.form-title {
  font-size: 1.8em;
  margin-bottom: 25px;
  color: var(--text-color);
  border-bottom: 3px solid var(--border-color);
  padding-bottom: 10px;
  text-align: center;
}

/* ============================================= */
/* FORM STYLING */
/* ============================================= */
.form-group {
  margin-bottom: 20px;
}
.form-group label {
  display: block;
  margin-bottom: 8px;
  font-weight: 600;
  color: var(--text-color);
}
.form-control {
  width: 100%;
  padding: 10px;
  border: 1px solid var(--border-color);
  border-radius: 8px;
  background-color: var(--input-bg);
  color: var(--text-color);
  transition: border-color 0.3s ease, box-shadow 0.3s ease;
}
.form-control:focus {
  outline: none;
  border-color: #007bff;
  box-shadow: 0 0 5px rgba(0, 123, 255, 0.3);
}

/* ============================================= */
/* BUTTONS */
/* ============================================= */
.form-actions {
  margin-top: 30px;
  display: flex;
  justify-content: center;
  gap: 15px;
  flex-wrap: wrap;
}

.btn {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  font-weight: 600;
  padding: 12px 22px;
  border-radius: 10px;
  text-decoration: none;
  transition: all 0.3s ease;
  font-size: 0.95rem;
  min-width: 160px;
  text-align: center;
}
.btn i {
  margin-right: 8px;
}

.btn-primary.save-btn {
  background-color: #007bff;
  color: #fff;
  border: none;
}
.btn-primary.save-btn:hover {
  background-color: #0056b3;
  transform: translateY(-2px);
}

.btn-secondary.cancel-btn {
  background-color: #6c757d;
  color: #fff;
  border: none;
}
.btn-secondary.cancel-btn:hover {
  background-color: #5a6268;
  transform: translateY(-2px);
}

/* ============================================= */
/* MOBILE RESPONSIVE FIXES */
/* ============================================= */
@media (max-width: 600px) {
  .password-card {
    padding: 25px 20px;
    margin: 0 10px;
  }
  .form-title {
    font-size: 1.5em;
  }
  .form-actions {
    flex-direction: column;
    align-items: stretch;
    gap: 12px;
  }
  .btn {
    width: 100%;
    min-width: unset;
    font-size: 1rem;
    padding: 12px;
  }
}
</style>
