<%- include('partials/header', { title: title }) %>

<main class="search-results-main">
    <div class="container">
        <h1 class="page-title">
            <i class="fa-solid fa-magnifying-glass"></i> 
            Search Results for: <span class="query-highlight">"<%= query %>"</span>
        </h1>

        <p class="result-count">
            Found <strong><%= posts.length %></strong> post<%= (posts.length !== 1) ? 's' : '' %> matching your query.
        </p>

        <hr>

        <% if (posts.length > 0) { %>
            <div class="posts-grid">
                <% posts.forEach(function(post) { %>
                    <div class="post-card">
                        <div class="image-container">
                            <img src="<%= post.coverImage %>" alt="<%= post.title %> cover" class="post-card-image">
                        </div>
                        <div class="post-card-content">
                            <a href="/posts/<%= post._id %>" class="post-card-title"><%= post.title %></a>
                            <p class="post-card-snippet"><%= post.snippet %></p>
                            <div class="post-card-meta">
                                <span class="meta-author">
                                    <i class="fa-solid fa-user"></i>
                                    <a href="/users/<%= post.author._id %>"><%= post.author.username %></a>
                                </span>
                                <span class="meta-date">
                                    <i class="fa-solid fa-calendar"></i>
                                    <%= post.createdAt.toDateString() %>
                                </span>
                            </div>
                        </div>
                    </div>
                <% }); %>
            </div>
        <% } else { %>
            <div class="no-results-message">
                <i class="fa-solid fa-face-frown"></i>
                <p>Sorry, no posts matched your search query. Try different keywords!</p>
            </div>
        <% } %>
    </div>
</main>

<%- include('partials/footer') %>

<style>
/* ============================================= */
/* BASE STYLES */
/* ============================================= */
.search-results-main {
    padding: 50px 0;
    min-height: 100vh;
    background-color: var(--bg-color);
    color: var(--text-color);
    animation: fadeIn 0.6s ease-in-out;
}

.page-title {
    font-size: 2.2rem;
    font-weight: 700;
    color: var(--text-color);
    margin-bottom: 10px;
    text-align: center;
}

.query-highlight {
    color: var(--primary-color);
    font-weight: 700;
}

.result-count {
    text-align: center;
    font-size: 1.1rem;
    color: #888;
    margin-bottom: 30px;
}

hr {
    border-color: var(--border-color);
    margin-bottom: 40px;
}

/* ============================================= */
/* POSTS GRID */
/* ============================================= */
.posts-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 30px;
    justify-content: center;
    align-items: stretch;
}

/* ============================================= */
/* POST CARD */
/* ============================================= */
.post-card {
    background-color: var(--card-bg);
    border-radius: 16px;
    overflow: hidden;
    box-shadow: 0 6px 16px rgba(0,0,0,0.08);
    transition: all 0.3s ease;
    cursor: pointer;
    transform: translateY(0);
    animation: slideUp 0.4s ease-in-out;
}
.post-card:hover {
    transform: translateY(-8px);
    box-shadow: 0 10px 22px rgba(0,0,0,0.15);
}

.image-container {
    height: 200px;
    overflow: hidden;
}
.post-card-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.4s ease;
}
.post-card:hover .post-card-image {
    transform: scale(1.05);
}

.post-card-content {
    padding: 20px;
}
.post-card-title {
    font-size: 1.25em;
    font-weight: 600;
    color: var(--primary-color);
    text-decoration: none;
    display: block;
    margin-bottom: 8px;
    transition: color 0.3s ease;
}
.post-card-title:hover {
    color: #0056b3;
}
.post-card-snippet {
    font-size: 0.95em;
    color: #6c757d;
    margin-bottom: 15px;
    line-height: 1.6;
}
.post-card-meta {
    display: flex;
    justify-content: space-between;
    font-size: 0.85em;
    color: #aaa;
}
.meta-author a {
    color: var(--primary-color);
    text-decoration: none;
}
.meta-author a:hover {
    text-decoration: underline;
}

/* ============================================= */
/* NO RESULTS MESSAGE */
/* ============================================= */
.no-results-message {
    text-align: center;
    padding: 80px 20px;
    border: 2px dashed rgba(255, 0, 0, 0.4);
    border-radius: 16px;
    color: #e63946;
    background-color: rgba(255, 0, 0, 0.05);
    margin-top: 50px;
    animation: fadeIn 0.6s ease-in-out;
}
.no-results-message i {
    font-size: 3rem;
    display: block;
    margin-bottom: 15px;
}

/* ============================================= */
/* ANIMATIONS */
/* ============================================= */
@keyframes fadeIn {
    from { opacity: 0; transform: translateY(10px); }
    to { opacity: 1; transform: translateY(0); }
}
@keyframes slideUp {
    from { opacity: 0; transform: translateY(20px); }
    to { opacity: 1; transform: translateY(0); }
}

/* ============================================= */
/* RESPONSIVE DESIGN */
/* ============================================= */
@media (max-width: 768px) {
    .page-title {
        font-size: 1.8rem;
    }
    .posts-grid {
        gap: 20px;
    }
    .post-card {
        border-radius: 12px;
    }
    .image-container {
        height: 180px;
    }
}
@media (max-width: 480px) {
    .page-title {
        font-size: 1.5rem;
    }
    .result-count {
        font-size: 1rem;
    }
    .post-card-content {
        padding: 15px;
    }
}
</style>
