  margin-bottom: 18px;
}

label {
  font-weight: 500;
  display: block;
  margin-bottom: 6px;
  color: #333;
}

.form-control {
  width: 100%;
  padding: 10px 12px;
  border: 1px solid #ced4da;
  border-radius: 6px;
  font-size: 0.95rem;
}

.form-control:focus {
  border-color: #0d6efd;
  outline: none;
  box-shadow: 0 0 0 2px rgba(13,110,253,0.25);
}

.btn-primary {
  background-color: #0d6efd;
  color: #fff;
  border: none;
  border-radius: 6px;
