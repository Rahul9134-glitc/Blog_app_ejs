  background: #fff;
  padding: 35px 40px;
  border-radius: 12px;
  box-shadow: 0 4px 15px rgba(0,0,0,0.1);
  max-width: 420px;
  width: 100%;
}

.auth-container h2 {
  text-align: center;
  margin-bottom: 10px;
  font-weight: 700;
  color: #222;
}

